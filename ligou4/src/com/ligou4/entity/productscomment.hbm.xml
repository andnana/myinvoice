<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ligou4.entity.ProductsComment" 
		table="productscomment">
		<id name="id" type="integer" 
			column="ID">
			<!-- 用来指明主键的生成方式 -->
			<generator class="native" />
				
		</id>
		<property name="content" 
			type="java.lang.String" column="content" />
		
			<property name="addtime" type="java.util.Date" column="addtime" />
		
		<property name="floor" type="java.lang.Integer" column="floor" />
			
		<many-to-one name="user" column="userid"  cascade="none" lazy="false" not-found="ignore"> 
		 
	</many-to-one>
		<many-to-one name="products" column="productsid"  cascade="none" lazy="false" not-found="ignore"> 
		 
	</many-to-one>
	</class>
</hibernate-mapping>