<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ghl.entity.Product" 
		table="Product">
		<id name="id" type="integer" 
			column="ID">
			<!-- 用来指明主键的生成方式 -->
			<generator class="native" />
				
		</id>
		<property name="productname" 
			type="java.lang.String" column="productname" />
		<property name="introduce" 
			type="java.lang.String" column="introduce" />
				<property name="price" 
			type="java.lang.Double" column="price" />
	<property name="date" type="java.util.Date" column="date" />
	</class>
</hibernate-mapping>