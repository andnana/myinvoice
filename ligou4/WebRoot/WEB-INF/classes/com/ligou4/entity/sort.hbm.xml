<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ligou4.entity.Sort" 
		table="sort">
		<id name="id" type="integer" 
			column="ID">
			<!-- 用来指明主键的生成方式 -->
			<generator class="native" />
				
		</id>
		<property name="sortname" 
			type="java.lang.String" column="sortname" />
		<bag name="productsList" inverse="false" lazy="false" cascade="all" order-by="id desc">
		<key column="sortid"> </key>
			<one-to-many class="com.ligou4.entity.Products"/>
		</bag>
	</class>
</hibernate-mapping>