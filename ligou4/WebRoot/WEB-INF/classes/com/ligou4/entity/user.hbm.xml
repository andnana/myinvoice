<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ligou4.entity.User" 
		table="f_user">
		<id name="id" type="integer" 
			column="ID">
			<!-- 用来指明主键的生成方式 -->
			<generator class="native" />
				
		</id>
		<property name="username" 
			type="java.lang.String" column="username" />
			
	<property name="pwd" type="java.lang.String" column="pwd" />
	<property name="name" type="java.lang.String" column="name" />
	<property name="age" type="java.lang.Integer" column="age" />
	<property name="gender" type="java.lang.String" column="gender" />
	<property name="phone" type="java.lang.String" column="phone" />
	<property name="qq" type="java.lang.String" column="qq" />
	
		<property name="birthday" type="java.util.Date" column="birthday" />
		<property name="headpic" type="java.lang.String" column="headpic" />
		<property name="email" type="java.lang.String" column="email" />
	<bag name="newsList" inverse="false" lazy="false" cascade="all" order-by="id desc">
		<key column="userid"> </key>
			<one-to-many class="com.ligou4.entity.News"/>
		</bag>
		<bag name="commentlist" inverse="false" lazy="false" cascade="all" order-by="id desc">
		<key column="userid"> </key>
			<one-to-many class="com.ligou4.entity.Comment"/>
		</bag>
		<bag name="productsCommentList" inverse="false" lazy="false" cascade="all" order-by="id desc">
		<key column="userid"> </key>
			<one-to-many class="com.ligou4.entity.ProductsComment"/>
		</bag>
			<bag name="scoreList" inverse="false" lazy="false" cascade="all" order-by="id desc">
		<key column="userid"> </key>
			<one-to-many class="com.ligou4.entity.Score"/>
		</bag>	
	</class>
</hibernate-mapping>